<VirtualHost *:80>
             ServerName 127.0.0.1
             DocumentRoot /tmp/mod_tcpcrypt/
             <Directory /tmp/mod_tcpcrypt/>
                        Options +ExecCGI
                        AddHandler cgi-script .sh
             </Directory>
             
             LogLevel debug
                      
             <IfModule !mod_tcpcrypt.c>
                       LoadModule tcpcrypt_module modules/mod_tcpcrypt.so
             </IfModule>
</VirtualHost>